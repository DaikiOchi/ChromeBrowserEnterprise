						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "http://kjur.github.io/jsrsasign/jsrsasign-latest-all-min.js",
					"protocol": "http",
					"host": [
						"kjur",
						"github",
						"io"
					],
					"path": [
						"jsrsasign",
						"jsrsasign-latest-all-min.js"
					]
				}
			},
			"response": []
		},
		{
			"name": "Get token",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var response = pm.response.json()\r",
							"var accessToken = response.access_token; \r",
							"console.log(\"access token = \" + accessToken);\r",
							"var accessTokenClean = accessToken.replace(/\\.+$/, \"\");\r",
							"pm.globals.set(\"authAccessToken\", accessTokenClean);\r",
							"\r",
							"console.log(\"access token clearned = \" + pm.globals.get(\"authAccessToken\"));"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"var navigator = {}; //fake a navigator object for the lib\r",
							"var window = {}; //fake a window object for the lib\r",
							"eval(pm.collectionVariables.get(\"jsrsasign-js\")); //import javascript jsrsasign\r",
							"\r",
							"var currentTime = +new Date(); // the current time in milliseconds\r",
							"var issuedAtTimeSeconds = currentTime/1000;\r",
							"var expirationTimeSeconds = currentTime/1000 + 3600;\r",
							"\r",
							"var header = {\"alg\":\"RS256\"};\r",
							"var sHeader = JSON.stringify(header);\r",
							"console.log(sHeader);\r",
							"\r",
							"var payload = {\r",
							"    \"iss\":  pm.collectionVariables.get(\"iss\"),\r",
							"    \"scope\": pm.collectionVariables.get(\"scope\"),\r",
							"    \"aud\" :  pm.collectionVariables.get(\"aud\"),\r",
							"    \"exp\" : Math.ceil(expirationTimeSeconds),\r",
							"    \"iat\" : Math.ceil(issuedAtTimeSeconds)\r",
							"};\r",
							"var sPayload = JSON.stringify(payload);\r",
							"console.log(sPayload);\r",
							"\r",
							"var privateKey = pm.collectionVariables.get(\"privateKey\");\r",
							"//console.log(privateKey);\r",
							"\r",
							"var sJWS = KJUR.jws.JWS.sign(\"RS256\", sHeader, sPayload, privateKey);\r",
							"\r",
							"console.log(sJWS);\r",
							"\r",
							"pm.collectionVariables.set(\"sJWS\", sJWS);"
						],
						"type": "text/javascript"
					}
				}
			],
			"protocolProfileBehavior": {
				"strictSSL": true
			},
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/x-www-form-urlencoded",
						"type": "text"
